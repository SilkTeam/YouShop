
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
  
</head>
<body>

    <button type="button" class="layui-btn layui-btn-normal" id="btnAdd">新增</button>
    <hr />
    <table id="demo" class="table"></table>



    @*<script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <script src="~/Content/layui/layui.all.js"></script>*@
    @section scripts{
        <script>
            var tabIns = null;
            layui.use('table', function () {
                var table = layui.table;
                //第一个实例
                tabIns = table.render({
                    elem: '#demo'
                    , height: 'full-100'
                    , toolbar: true //开启头部工具栏，并为其绑定左侧模板
                    , defaultToolbar: ['filter', 'exports', 'print', { //自定义头部工具栏右侧图标。如无需自定义，去除该参数即可
                        title: '提示'
                        , layEvent: 'LAYTABLE_TIPS'
                        , icon: 'layui-icon-tips'
                    }]
                    , url: '/Manager/GetIndex' //数据接口
                    , page: true //开启分页
                    , cols: [[ //表头
                        { field: 'ID', title: '编号', width: 80, fixed: 'left', sort: true }
                        , { field: 'Name', title: '用户名', width: 150 }
                        , { field: 'WalletID', title: '账号', width: 150 }
                        , { field: 'Phone', title: '年龄', width: 80 }
                        , { field: 'Img', title: '年龄', width: 80 }
                        , { field: 'SiginID', title: '年龄', width: 80 }
                        , { field: 'EntryTime', title: '年龄', width: 80 }
                        , { field: 'Age', title: '年龄', width: 80 }

                        , {
                            title: '操作', templet: function (d) {
                                return '<button type="button" class="layui-btn layui-btn-xs" onclick="edit(' + d.ID + ')">编辑</button>';
                            }
                            , 
                            title: '操作', templet: function (d) {
                                return '<button type="button" class="layui-btn layui-btn-xs" onclick="edit(' + d.ID + ')">编辑</button>';
                            }
                        }
                    ]]
                });
            });

            var winOpen = null;
            $("#btnAdd").click(function () {
                winOpen = layer.open({
                    type: 2,
                    title: '新增会员',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['700px', '60%'],
                    content: '/Manager/Add' //iframe的url
                });
            })

            function winClose() {
                layer.close(winOpen);
                tabIns.reload();
            }

            function edit(id) {
                winOpen = layer.open({
                    type: 2,
                    title: '编辑会员',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['700px', '60%'],
                    content: '/home/edit?id=' + id //iframe的url
                });
            }
        </script>
        }
    </body>
</html>



   



